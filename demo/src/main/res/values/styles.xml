<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="ipiCirclePageIndicatorStyle">@style/IpiCirclePageIndicatorStyle</item>
        <item name="ipiTitlePageIndicatorStyle">@style/IpiTitlePageIndicatorStyle</item>
    </style>

    <style name="IpiCirclePageIndicatorStyle">
        <item name="cpi_radius">7dp</item>
        <item name="cpi_fillColor">#3e82f8</item>
        <item name="cpi_pageColor">#fa595f</item>
        <item name="cpi_centered">true</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="IpiTitlePageIndicatorStyle">
        <item name="android:textColor">#000</item>
        <item name="tpiSelectedColor">#fa595f</item>
        <item name="tpiFooterIndicatorStyle">none</item>
    </style>

</resources>
