<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- copy https://github.com/JakeWharton/Android-ViewPagerIndicator/ -->

    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="ipiCirclePageIndicatorStyle" format="reference"/>
        <!-- Style of the title indicator. -->
        <attr name="ipiTitlePageIndicatorStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ipiCirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="cpi_centered" format="boolean"/>
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="cpi_fillColor" format="color"/>
        <!-- Color of the filled circles that represents pages. -->
        <attr name="cpi_pageColor" format="color"/>
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="cpi_radius" format="dimension"/>
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="cpi_snap" format="boolean"/>
        <!-- Color of the open circles. -->
        <attr name="cpi_strokeColor" format="color"/>
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="cpi_strokeWidth" format="dimension|reference"/>
        <!-- View background -->
        <attr name="android:background"/>
    </declare-styleable>

    <declare-styleable name="ipiTitlePageIndicator">
        <!-- Screen edge padding. -->
        <attr name="tpiClipPadding" format="dimension" />
        <!-- Color of the footer line and indicator. -->
        <attr name="tpiFooterColor" format="color" />
        <!-- Height of the footer line. -->
        <attr name="tpiFooterLineHeight" format="dimension" />
        <!-- Style of the indicator. Default is triangle. -->
        <attr name="tpiFooterIndicatorStyle">
            <enum name="none" value="0" />
            <enum name="triangle" value="1" />
            <enum name="underline" value="2" />
        </attr>
        <!-- Height of the indicator above the footer line. -->
        <attr name="tpiFooterIndicatorHeight" format="dimension" />
        <!-- Left and right padding of the underline indicator. -->
        <attr name="tpiFooterIndicatorUnderlinePadding" format="dimension" />
        <!-- Padding between the bottom of the title and the footer. -->
        <attr name="tpiFooterPadding" format="dimension" />
        <!-- Position of the line. -->
        <attr name="tpiLinePosition">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
        </attr>
        <!-- Color of the selected title. -->
        <attr name="tpiSelectedColor" format="color"/>
        <!-- Whether or not the selected item is displayed as bold. -->
        <attr name="tpiSelectedBold" format="boolean" />
        <!-- Color of regular titles. -->
        <attr name="android:textColor" />
        <!-- Size of title text. -->
        <attr name="android:textSize" />
        <!-- Padding between titles when bumping into each other. -->
        <attr name="tpiTitlePadding" format="dimension" />
        <!-- Padding between titles and the top of the View. -->
        <attr name="tpiTopPadding" format="dimension" />
        <!-- View background -->
        <attr name="android:background"/>
    </declare-styleable>
</resources>